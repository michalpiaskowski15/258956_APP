<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/szary"
    tools:context=".Fragment1"
    tools:ignore="HardcodedText"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_menu_book_24"
        android:contentDescription="@string/ikona_ksiazki"
        android:layout_weight="15"
        android:id="@+id/ikona_ksiazki"
        android:layout_marginBottom="20sp"
        >

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@color/niebieski"
        android:text="Wiedza, która Cię interesuje potencjalnie znajduje się w poniższych rozdziałach."
        tools:ignore="HardcodedText"
        android:textSize="20sp"
        android:layout_marginBottom="20sp"
        android:layout_marginHorizontal="10sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:layout_marginBottom="20sp"
        android:layout_marginHorizontal="40sp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@color/android"
        android:text="Pamiętaj że wyszukiwarka działa na podstawie tagów, jeśli wyniki nie są satysfakcjonujące - skorzystaj z menu bocznego">
    </TextView>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

    </ListView>




</LinearLayout>
