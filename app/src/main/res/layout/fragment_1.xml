<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/szary"
    tools:context=".Fragment1"
    tools:ignore="HardcodedText"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/baseline_menu_book_24"
        android:contentDescription="@string/ikona_ksiazki"
        android:layout_weight="25"
        android:id="@+id/ikona_ksiazki"
        android:layout_marginBottom="20sp"
        >

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@color/niebieski"
        android:text="Witaj w Twoim podręcznym kompendium wiedzy!"
        tools:ignore="HardcodedText"
        android:textSize="25sp"
        android:layout_marginBottom="10sp"
        android:layout_marginHorizontal="10sp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/InputFindSection"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:layout_gravity="center"
        android:layout_margin="30sp"
        app:hintAnimationEnabled="true"
        android:hint="wyszukaj np. fragment, layout"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:id="@+id/searchbar"
            android:textColor="@color/white"
            android:inputType="text"
            android:background="@drawable/roundtxt"
            android:padding="30dp" />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:textColor="@color/niebieski"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:layout_marginStart="10sp"
        android:padding="16dp"
        android:text="Wyszukaj"
        android:id="@+id/buttonSearch"
        >

    </Button>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:id="@+id/searchresults"
        >

    </ListView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:layout_marginBottom="10sp"
        android:layout_marginHorizontal="40sp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@color/niebieski"
        android:text="...lub rozwiń boczne menu, aby przejść do wyboru kategorii"
        android:textSize="15sp"
        >

    </TextView>

</LinearLayout>
